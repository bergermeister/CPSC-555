@page
@model StDb2EFRP.Pages.Enroll.RegisterModel
@{
   ViewData[ "Title" ] = "Register";
}

<h1>Register</h1>

<p>
   @Model.Status
</p>
<form name="f1" method="post" asp-page="Register">
   <div class="container">
      <div class="col-md-10">
         <table class="table">
            <thead>
               <tr>
                  <th>
                     @Html.DisplayNameFor( model => model.Students[ 0 ].FirstName )
                  </th>
                  <th>
                     @Html.DisplayNameFor( model => model.Students[ 0 ].LastName )
                  </th>
                  <th>
                     @Html.DisplayNameFor( model => model.Students[ 0 ].StudentId )
                  </th>
                  <th>
                     @Html.DisplayNameFor( model => model.Students[ 0 ].Credits )
                  </th>
                  <th></th>
               </tr>
            </thead>
            <tbody>
               @foreach( var item in Model.Students )
               {
                  <tr>
                     <td>
                        @Html.DisplayFor( modelItem => item.FirstName )
                     </td>
                     <td>
                        @Html.DisplayFor( modelItem => item.LastName )
                     </td>
                     <td>
                        @Html.DisplayFor( modelItem => item.StudentId )
                     </td>
                     <td>
                        @Html.DisplayFor( modelItem => item.Credits )
                     </td>
                     <td>
                     <td>
                        <a asp-page="../Stu/Details" asp-route-id="@item.StudentId">Details</a> |
                        <input type="hidden" asp-for="Course.CourseNum" />
                        <input type="submit" value="Register" class="btn btn-success" asp-route-id="@item.StudentId" />
                     </td>
                  </tr>
               }
            </tbody>
         </table>
      </div>
   </div>
</form>
