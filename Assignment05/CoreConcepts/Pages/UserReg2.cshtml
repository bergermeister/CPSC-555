@page
@model CoreConcepts.Pages.UserReg2Model
@{
   ViewData[ "Title" ] = "UserReg2";
}

<h1>UserReg2</h1>
<div class="container">
   <form name="f1" method="post">
      <div class="form-group row">
         <label for="txtNM" class="col-md-2">Name</label>
         <input type="text" class="form-control col-md-3" asp-for="Name" />
      </div>
      <div class="form-group row">
         <label for="txtEmail" class="col-md-2">Email</label>
         <input type="text" class="form-control col-md-3" asp-for="Email" />
      </div>
      <button type="submit" class="btn btn-success offset-md-2">Submit</button>
   </form>
   <!--comments in Razor are @* *@-->

   @{ // server-side code - will be executed both in get and post
      if( ( Model.Name != String.Empty ) || ( Model.Email != String.Empty ) )
      {
         @:Name Entered = @Model.Name Email Entered=@Model.Email
      }
   }
   <div id="d1">
      @ViewData[ "NMEMAIL" ]
   </div>
</div>
